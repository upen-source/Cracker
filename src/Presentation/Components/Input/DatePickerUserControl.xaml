<UserControl x:Class="Presentation.Components.Input.DatePickerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <DatePicker x:Name="DatePickerInput"
                Width="{Binding DatePickerWidth}"
                materialDesign:HintAssist.Hint="{Binding DatePickerHint}"
                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                Foreground="DimGray"
                BorderBrush="Gray"
                FontSize="{Binding DatePickerFontSize}"
                Text="{Binding FieldText}"/>
</UserControl>

